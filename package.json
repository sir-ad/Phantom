{
  "name": "phantom",
  "version": "1.0.0",
  "description": "The invisible force behind every great product. Open source PM operating system for the terminal age.",
  "private": true,
  "bin": {
    "phantom": "dist/phantom.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@phantom/core && npm run build --workspace=@phantom/mcp-server && npm run build --workspace=@phantom/modules && npm run build --workspace=@phantom/tui && npm run build --workspace=@phantom/cli",
    "build:github-dist": "node scripts/release/build-github-distribution.mjs",
    "dev": "npm run dev --workspace=packages/cli",
    "website:dev": "node scripts/serve-website.mjs",
    "phantom": "node packages/cli/dist/index.js",
    "typecheck": "npm run build",
    "lint": "npm run typecheck",
    "test": "npm run build && node --test tests/smoke.test.mjs tests/mcp-contract.test.mjs",
    "reality:check": "npm run build && node --test tests/reality-gate.test.mjs",
    "release:local": "npm run build && node scripts/release/build-local-install-artifacts.mjs",
    "installer:test-local": "npm run build && node scripts/release/test-local-installer.mjs",
    "agents:upgrade": "sh scripts/upgrade-agents.sh",
    "clean": "rm -rf packages/*/dist dist"
  },
  "keywords": [
    "product-management",
    "ai",
    "cli",
    "tui",
    "phantom",
    "pm",
    "agent",
    "terminal"
  ],
  "author": "Adarsh Agrahari",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.27.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "playwright": "^1.58.2"
  }
}
