# PHANTOM AI Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API (Required for GPT-4, GPT-3.5, etc.)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Optional, for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama (Optional, local models)
# Default: http://localhost:11434 (if running locally)

# GitHub Integration (Optional)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY=your_github_private_key

# Figma Integration (Optional)
FIGMA_ACCESS_TOKEN=your_figma_access_token_here

# Linear Integration (Optional)
LINEAR_API_KEY=your_linear_api_key_here

# Slack Integration (Optional)
SLACK_BOT_TOKEN=your_slack_bot_token_here

# Environment settings
PHANTOM_AI_PROVIDER=openai  # openai, anthropic, ollama, or hybrid
PHANTOM_HOME=~/.phantom     # Configuration directory

# Optional: Model preferences
PHANTOM_DEFAULT_MODEL=gpt-4-turbo-preview
PHANTOM_STRATEGIST_MODEL=gpt-4-turbo-preview
PHANTOM_ANALYST_MODEL=gpt-4-turbo-preview
PHANTOM_BUILDER_MODEL=gpt-4-turbo-preview
PHANTOM_DESIGNER_MODEL=gpt-4-turbo-preview
PHANTOM_RESEARCHER_MODEL=gpt-4-turbo-preview
PHANTOM_COMMUNICATOR_MODEL=gpt-4-turbo-preview
PHANTOM_OPERATOR_MODEL=gpt-4-turbo-preview