{
    "manifest_version": 3,
    "name": "Phantom Oracle",
    "version": "1.0.0",
    "description": "Philosopher in your browser. Analyzes your chats and provides wisdom.",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://chatgpt.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*"
    ],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://chatgpt.com/*",
                "*://claude.ai/*",
                "*://gemini.google.com/*"
            ],
            "js": [
                "src/content.ts"
            ]
        }
    ],
    "action": {
        "default_title": "Phantom Oracle"
    }
}