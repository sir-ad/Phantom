{
  "name": "phantom-vscode",
  "displayName": "PHANTOM PM OS",
  "description": "Matrix-themed Product Management Operating System for AI agents",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "phantom.openDashboard",
        "title": "PHANTOM: Open Dashboard",
        "category": "PHANTOM"
      },
      {
        "command": "phantom.generatePRD",
        "title": "PHANTOM: Generate PRD",
        "category": "PHANTOM"
      },
      {
        "command": "phantom.analyzeDecision",
        "title": "PHANTOM: Analyze Product Decision",
        "category": "PHANTOM"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "phantom",
          "title": "PHANTOM",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "phantom": [
        {
          "id": "phantom.dashboard",
          "name": "Dashboard",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}